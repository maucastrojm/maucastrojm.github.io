{
  "name": "azalea-portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^24",
    "pnpm": "^10"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:stats": "OPEN_STATS=true pnpm build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build-only": "vite build",
    "type-check": "vue-tsc  --noEmit --project tsconfig.app.json",
    "lint": "eslint . --fix --cache --concurrency auto",
    "ui:add": "pnpm dlx shadcn-vue@latest add",
    "update": "pnpm dlx npm-check-updates -i --format group",
    "update:dry": "pnpm dlx npm-check-updates",
    "update:auto": "pnpm dlx npm-check-updates -u",
    "prepare": "husky",
    "deploy": "pnpm build && gh-pages -d dist"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "lucide-vue-next": "^0.562.0",
    "motion-v": "^1.7.4",
    "pinia": "^3.0.4",
    "reka-ui": "^2.6.1",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vue": "~10.6.2",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.3.0",
    "npm-run-all2": "^8.0.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "shadcn-vue": "^2.4.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.1",
    "unplugin-auto-import": "^20.3.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vitest-mock-extended": "^3.1.0",
    "vue-tsc": "^3.2.1"
  }
}